<div class="container">
    <div class="form">
        <label for="title">Title</label>
        <input required value="<%= event.title %>" type="text" name="title" id="title" class="form-control">
    </div>
    <div class="form-group">
        <label for="description">Description</label>
        <textarea name="description" id="description" class=" form-control"><%=event.description%></textarea>
    </div>
    <div class="form-group">
        <label for="Markdown">Markdown</label>
        <textarea name="markdown" id="markdown" class=" form-control" required><%=event.markdown%></textarea>
    </div>


    <a href="/" class="btn btn-secondary mt-4 center">Cancel</a>
    <button type="submit" class="btn btn-outline-secondary mt-4 center">submit</button>
</div>