<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.min.css">
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <title>Eventsnode</title>
    <style>

    </style>
</head>

<body>
    <section class="info">
        <div class="container">
            <h1 class="text-accent-4">EventsNode</h1>
    </section>
    <section id="create">
        <div class="container">
            <div class="col s10 m6 l6 light-blue">
                <a href="/events/new" class="btn-flat pulse btn-large"><i  class="material-icons">create</i><span></span></a>
            </div>
        </div>
    </section>
    <section class="cards">
        <div class="container" style="padding-left : 50px; padding-right:50px">
            <% events.forEach(events => { %>
                <div class="col s12 m12 l4" style="padding:50px 5px;">
                    <div class="card">
                        <div class="card-image waves-effect waves-block waves-light">
                            <img class="activator" src="https://media4.giphy.com/media/xT8qB2HYA1vVSxooSY/100.webp?cid=ecf05e47u1tjx1qezghm1jhx5fnghe11cw6i0y8d2se11rbs&rid=100.webp&ct=g">
                        </div>
                        <div class="card-content">
                            <span class="card-title activator grey-text text-darken-4"><%=events.title%><i
                                class="material-icons right">more_vert</i></span>
                            <span class="text-lighten-1 grey-text small "><%= events.createdAt.toLocaleString()%></span>
                            <p>
                                <%=events.description%>
                            </p>

                        </div>
                        <div class="card-reveal">
                            <span class="card-title grey-text text-darken-4"><%=events.description%><i
                                class="material-icons right">close</i></span>
                            <p>Sign up !</p>
                        </div>
                        <div class="card-action ">
                            <a href="events/<%=events.slug %>" class="waves-effect waves-light btn-floating  "><i class="material-icons">save</i></a>
                            <form action="/events/<%=events.id%>?_method=DELETE" method="POST" class="col s4 inline">
                                <br>
                                <button type="submit" class="waves-effect waves-light btn-floating "><i class="material-icons">delete</i></button></form>
                        </div>
                    </div>
                </div>
                <% }) %>
    </section>
</body>

</html>